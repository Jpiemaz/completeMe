<h2><%= @user.email %>'s Tasks</h2>
<div>
  <%= link_to "Add Task", [:new, @user, :task], id: "new_link", remote: true %>
</div>
<div>
  <% @distinct_due_dates.each do |due_date| %>
    <p><%= pretty_due_date(due_date) %></p>
      <% @tasks.each do |task| %>
        <% if task.due_date == due_date && task.uncompleted? %>
          <%= render "tasks/uncompleted_task", task: task %>
        <% end %>
      <% end %>
  <% end %>
</div>
<div>
  <h2>Completed Tasks</h2>
  <% @tasks.each do |task| %>
    <% if task.completed? %>
      <%= render "tasks/completed_task", task: task %>
    <% end %>
  <% end %>
<div>
  <%= link_to "Back to Profile", [@user, :profile] %>
</div>
